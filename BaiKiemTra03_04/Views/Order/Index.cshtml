@model IEnumerable<BaiKiemTra03_04.Models.Order>

@{
    ViewData["Title"] = "Order List";
}

<h2>Order List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Order</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Supplier</th>
            <th>Order Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.OrderDate.ToString("d")</td>
                <td>@order.TotalAmount</td>
                <td>@order.Supplier.SupplierName</td>
                <td>@order.OrderStatus</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@order.OrderId" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@order.OrderId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
