@model IEnumerable<SanPham> 
<div class="table">
    <table>
        <thead>
        <th>Tên Sản Phẩm </th>
        <th>Mô tả </th>
        <th>Giá Tiền </th>
        <th>Hình ảnh </th>
        <th>Tên thể loại </th>
        <th>Chức năng </th>
        </thead>
        <tbody>
            @foreach(var item in @Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.price</td>
                    <td><img src="@item.ImageUrl"width="50px" /></td>
                    <td>@item.TheLoai.Name</td>
                    <td>
                        <a asp-action="Upsert" asp-route-id="@item.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>