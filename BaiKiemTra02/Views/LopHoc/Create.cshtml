@model BaiKiemTra02.Models.LopHoc

<h2>Thêm mới lớp học</h2>

<form asp-action="Create">
    <div class="form-group">
        <label for="TenLopHoc">Tên Lớp Học</label>
        <input type="text" class="form-control" asp-for="TenLopHoc" />
    </div>
    <div class="form-group">
        <label for="NamNhapHoc">Năm Nhập Học</label>
        <input type="number" class="form-control" asp-for="NamNhapHoc" />
    </div>
    <div class="form-group">
        <label for="NamRaTruong">Năm Ra Trường</label>
        <input type="number" class="form-control" asp-for="NamRaTruong" />
    </div>
    <div class="form-group">
        <label for="SoLuongSinhVien">Số Lượng Sinh Viên</label>
        <input type="number" class="form-control" asp-for="SoLuongSinhVien" />
    </div>
    <button type="submit" class="btn btn-primary">Thêm mới</button>
</form>

<a asp-action="Index">Trở về danh sách</a>
