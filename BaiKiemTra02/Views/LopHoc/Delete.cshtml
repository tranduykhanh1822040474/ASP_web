@model BaiKiemTra02.Models.LopHoc

<h2>Xóa lớp học</h2>

<div>
    <h4>Bạn có chắc chắn muốn xóa lớp học này?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Tên Lớp Học
        </dt>
        <dd class="col-sm-10">
            @Model.TenLopHoc
        </dd>
        <dt class="col-sm-2">
            Năm Nhập Học
        </dt>
        <dd class="col-sm-10">
            @Model.NamNhapHoc
        </dd>
        <dt class="col-sm-2">
            Năm Ra Trường
        </dt>
        <dd class="col-sm-10">
            @Model.NamRaTruong
        </dd>
        <dt class="col-sm-2">
            Số Lượng Sinh Viên
        </dt>
        <dd class="col-sm-10">
            @Model.SoLuongSinhVien
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
